#!/bin/bash
echo "hello team , this script is about to do a charge test with curl"
read -p "please give me your DNS:" my_url
read -p "voulez vous attaquer en HTTPS ? [y] yes [n] no): " choice1

if [ "$choice1" = "y" ] ; then
        {
                while true; do curl -o -k /dev/null "https://"$my_url":443/"; sleep 3;done
        }
                else
read -p "please enter your port ?:" my_port
        {
                while true; do curl -o -k /dev/null "http://"$my_url":"$my_port"/"; sleep 3;done
        }
fi
